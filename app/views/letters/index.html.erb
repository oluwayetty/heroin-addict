<% if current_user.supporter? %>
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default panel-table">
          <div class="panel-heading">
            <div class="row">
              <div class="col col-xs-6">
                <h3 class="panel-title">Letters</h3>
              </div>
              <div class="col col-xs-6 text-right">
                <p><%= link_to "Compose", new_letter_path, class: "btn btn-sm btn-success btn-create" %></p>
              </div>
            </div>
          </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                <th>Subject</th>
                <th>Recipient</th>
              </tr>
            </thead>
            <tbody>
              <% @letters.each do |letter| %>
                <tr>
                  <td><%= letter.subject %> </td>
                  <td><%= letter.recipient %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default panel-table">
          <div class="panel-heading">
            <div class="row">
              <div class="col col-xs-6">
                <h3 class="panel-title">Letters</h3>
              </div>
              <div class="col col-xs-6 text-right">
                <p>Total emails Received:
                  <span class="badge quote-badge">
                    <%= Letter.letters_grouped_by_recipient_id(current_user).count %>
                  </span>Â 
                </p>
              </div>
            </div>
          </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                <th></th>
                <th>Sender</th>
                <th>Subject</th>
              </tr>
            </thead>
            <tbody>
              <% @letters.each do |letter| %>
                <tr>
                  <td align="center"></td>
                  <td><%= letter.sender %> </td>
                  <td><%= letter.subject %> <%= link_to 'Read', letter_path(letter) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>
