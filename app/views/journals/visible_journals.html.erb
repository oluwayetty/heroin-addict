<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                <th class="hidden-xs">ID</th>
                <th>Subject</th>
                <th>Sender</th>
              </tr>
            </thead>
            <tbody>
              <% @visible_journals.each do |journal| %>
                <tr>
                  <td class="hidden-xs"></td>
                  <td><%= journal.subject %> </td>
                  <td><%= journal.user.username %>  <%= link_to 'Read', journals_path(journal) %></td>
                </tr>
              <% end %>
            </tbody>
            </table>
      </div>
    </div>
  </div>
</div>
